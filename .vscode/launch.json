{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jasmine - Current file",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/jasmine-ts/lib/index",
      "args": [
        "${file}"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "JASMINE_CONFIG_PATH": "${workspaceFolder}/tests/jasmine.json"
      },
      "console": "internalConsole",
      "trace": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Unit Test",
      "program": "${workspaceFolder}/node_modules/jasmine-ts/lib/index.js",
      "args": [
        "--config=node_modules/ad-did-services-common/tests/jasmine.json"
      ],
      "env": {
        "JASMINE_CONFIG_PATH": "${fileDirname}/jasmine.json"
      },
      "console": "internalConsole",
      "smartStep": true
    }
  ]
}