    "verifiablecredentials-crypto-sdk-typescript": "1.1.1",
    "base64url": "3.0.1",
    "canonicalize": "1.0.1",
    "deep-property-access": "1.0.1",
    "es6-promise": "^4.2.8",
    "isomorphic-fetch": "2.2.1",
    "multihashes": "0.4.14",
    "typescript-map": "0.0.7",
    "uuid": "7.0.1"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "include": [
      "lib/**"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html"
    ]
  }
